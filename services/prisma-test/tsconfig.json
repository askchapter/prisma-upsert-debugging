{
    "$schema": "http://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "forceConsistentCasingInFileNames": true,
        "jsx": "react",
        "declaration": true,
        "sourceMap": true,
        "declarationMap": true,
        "inlineSources": true,
        "experimentalDecorators": true,
        "strict": true,
        "esModuleInterop": true,
        "noEmitOnError": false,
        "allowUnreachableCode": false,
        "outDir": "./lib",
        "rootDir": "./src",
        "module": "commonjs",
        "target": "es2021",
        "lib": ["es2021", "dom"]
    },
    "include": ["./src/**/*.ts"]
}
